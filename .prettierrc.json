{
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": true,
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "none",
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "importOrder": [
        "<THIRD_PARTY_MODULES>",
        "^@/database(.*)$",
        "^@/interfaces(.*)$",
        "^@/const(.*)$",
        "^@/utils(.*)$",
        "^@/routes(.*)$",
        "^@/middlewares(.*)$",
        "^@/schemas(.*)$",
        "^@/controllers(.*)$",
        "^@/models(.*)$",
        "^[./]"
    ],
    "importOrderSortSpecifiers": true,
    "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
