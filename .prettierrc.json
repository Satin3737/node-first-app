{
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": true,
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "none",
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "importOrder": [
        "<THIRD_PARTY_MODULES>",
        "^@/enum(.*)$",
        "^@/const(.*)$",
        "^@/helper(.*)$",
        "^@/util(.*)$",
        "^@/routes(.*)$",
        "^@/controllers(.*)$",
        "^[./]"
    ],
    "importOrderSortSpecifiers": true,
    "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
